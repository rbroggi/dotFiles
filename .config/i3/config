set $mod Mod4

# hibernate suspend
set $hibernate sudo -A systemctl suspend
# Starts dunst for notifications:
exec --no-startup-id dunst
# composite manager for transparency
exec --no-startup-id compton -f
# Runs the key remapping scripts
exec --no-startup-id remaps.sh
# Unclutter makes the mouse invisible after a brief period
exec --no-startup-id unclutter
# Execute layout script
exec --no-startup-id ~/.screenlayout/i3WorkLaout.sh
# sync PRIMARY and CLIPBOARD selections -> causing problems with ideavim selection mode
exec --no-startup-id clipboard.sh
# startup
# wallpaper:
exec_always --no-startup-id feh --bg-scale ~/.wallpaper.jpg


